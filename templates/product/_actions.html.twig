<!-- Edit Button -->
<a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-sm btn-primary">Edit</a>

<!-- Delete Form -->
<form method="post" action="{{ path('app_product_delete', {'id': product.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" style="display:inline-block;">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
    <button class="btn btn-sm btn-danger">Delete</button>
</form>

<!-- Show Button -->
<a href="{{ path('app_product_show', {'id': product.id}) }}" class="btn btn-sm btn-info">Show</a>
