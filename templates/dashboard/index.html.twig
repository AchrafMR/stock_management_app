{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
<div class="container-xxl flex-grow-1 container-p-y">
  <div class="row">
    <div class="col-12 col-lg-8 mb-4">
      <div class="card">
        <div class="card-header">
          <h5 class="card-title">Product and Order Statistics</h5>
        </div>
        <div class="card-body">
          <canvas id="productOrderChart" width="300" height="300"></canvas>
        </div>
      </div>
    </div>
  </div>
</div>
{# <div class="container-xxl flex-grow-1 container-p-y">
  <div class="row">
    {% include 'order/chart.html.twig' %}

  </div>
</div> #}

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        var ctx = document.getElementById('productOrderChart').getContext('2d');
        var productCount = {{ productCount }};
        var orderCount = {{ orderCount }};

        var myChart = new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: ['Products', 'Orders'],
                datasets: [{
                    label: 'Count',
                    data: [productCount, orderCount],
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.5)',
                        'rgba(54, 162, 235, 0.5)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'top',
                    },
                    tooltip: {
                        enabled: true,
                    }
                },
            }
        });
    });
</script>
{% endblock %}
