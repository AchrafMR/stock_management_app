<!-- Edit Button -->
<a href="{{ path('app_setting_edit', {'id': user.id}) }}" class="btn btn-sm btn-primary">Edit</a>

<!-- Delete Form -->
<form method="post" action="{{ path('app_setting_delete', {'id': user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" style="display:inline-block;">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <button class="btn btn-sm btn-danger">Delete</button>
</form>

