{% extends 'base.html.twig' %}

{% block title %}Products in {{ category.name }}{% endblock %}

{% block body %}
<style>
  .product-card-container {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    justify-content: center;
    margin-top: 20px;
  }
  .product-card {
    width: 300px;
    border: 1px solid #ddd;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.2s ease-in-out;
  }
  .product-card:hover {
    transform: scale(1.05);
    border: 3px solid #696cff;
  }
  .product-card img {
    width: 100%;
    height: 150px; /* Adjusted height for smaller images */
    object-fit: cover;
  }
  .product-card .card-body {
    padding: 15px;
  }
  .product-card .card-title {
    font-size: 1.25rem;
    margin-bottom: 10px;
    font-weight: bold;
  }
  .product-card .card-text {
    font-size: 1rem;
    color: #666;
  }
  .product-card .card-text h1 {
    font-size: 1rem;
    margin: 5px 0;
  }
</style>
<div class="container-xxl flex-grow-1 container-p-y">
<h1>Products in {{ category.name }}</h1>

<div class="product-card-container">
  {% for product in products %}
    <div class="product-card">
      <img src="{{ asset('uploads/images/' ~ product.image) }}" alt="{{ product.name }} image" />
      <div class="card-body">
        <h5 class="card-title">{{ product.name }}</h5>
        <div class="card-text">
          <h1>Stock: {{ product.stock }}</h1>
          <h1>Price: {{ product.price }}</h1>
          <h1>Description: {{ product.description }}</h1>
          <h1>Category: {{ product.category.name }}</h1>
        </div>
      </div>
    </div>
  {% endfor %}
</div>
</div>
{% endblock %}
