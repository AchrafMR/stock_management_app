{% extends 'base.html.twig' %}

{% block title %}Product List{% endblock %}

{% block body %}
<style>
  .product-card-container {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    justify-content: center;
    margin-top: 20px;
  }
  .product-card {
    width: 300px;
    border: 1px solid #ddd;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.2s ease-in-out;
  }
  .product-card:hover {
    transform: scale(1.05);
  }
  .product-card img {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }
  .product-card .card-body {
    padding: 15px;
  }
  .product-card .card-title {
    font-size: 1.25rem;
    margin-bottom: 10px;
    font-weight: bold;
  }
  .product-card .card-text {
    font-size: 1rem;
    color: #666;
  }
  .product-card .card-text h1 {
    font-size: 1rem;
    margin: 5px 0;
  }
  .carousel-caption {
    background: rgba(0, 0, 0, 0.5);
    padding: 10px;
    border-radius: 5px;
  }
  .carousel {
    max-width: 600px;
    margin: 0 auto;
  }
  .carousel img {
    height: 350px; /* Adjust height for smaller carousel */
    object-fit: cover;
  }
</style>

<div class="container-xxl flex-grow-1 container-p-y">
  <div class="col-md">
    <h5 class="my-4 text-center">Featured Products</h5>

    <div id="carouselExample-cf" class="carousel carousel-dark slide carousel-fade" data-bs-ride="carousel">
      <ol class="carousel-indicators">
        {% for product in products %}
          <li data-bs-target="#carouselExample-cf" data-bs-slide-to="{{ loop.index0 }}" class="{{ loop.first ? 'active' : '' }}"></li>
        {% endfor %}
      </ol>
      <div class="carousel-inner">
        {% for product in products %}
          <div class="carousel-item {{ loop.first ? 'active' : '' }}">
            <img class="d-block w-100" src="{{ asset('uploads/images/' ~ product.image) }}" alt="{{ product.name }} image" />
            <div class="carousel-caption d-none d-md-block">
              <h3>{{ product.name }}</h3>
              <p>{{ product.description }}</p>
            </div>
          </div>
        {% endfor %}
      </div>
      <a class="carousel-control-prev" href="#carouselExample-cf" role="button" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExample-cf" role="button" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </a>
    </div>
  </div>

  <div class="product-card-container">
    {% for product in products %}
      <div class="product-card">
        <img src="{{ asset('uploads/images/' ~ product.image) }}" alt="{{ product.name }} image" />
        <div class="card-body">
          <h5 class="card-title">{{ product.name }}</h5>
          <div class="card-text">
             <h1>Description: {{ product.description }}</h1>
             <h1>Price: {{ product.price }} $</h1>
             <h1>Category: {{ product.category.name }}</h1>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</div>
{% endblock %}
